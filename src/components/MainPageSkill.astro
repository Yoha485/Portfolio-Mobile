---
import type { Skill } from '../constants/MainPage';

type Props = Skill;

const { skill, subskills, elementSkillId, elementSubskillId, color } = Astro.props;
---

<div>
  <div class="skill-circle">
    <h2>{skill}</h2>
  </div>
  <div class="subskill-circle hidden">
    {subskills.map((item) => <p>{item}</p>)}
  </div>
</div>

<style define:vars={{ color }}>
  .skill-circle {
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    background-color: var(--color);
  }

  .subskill-circle {
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    border: 1px solid var(--color);

    gap: 25px;
  }

  .skill-circle,
  .subskill-circle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h2 {
    font-weight: 700;
    font-size: 32px;
    color: #111111;
  }

  p {
    font-weight: 400;
    font-size: 20px;
  }

  h2,
  p {
    line-height: 100%;
  }

  .hidden {
    transition: all 0.7s;
    opacity: 0;
    filter: blur(5px);
    transform: translateY(50%);
  }

  .show {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }

  @media (prefers-reduced-motion) {
    .hidden {
      transition: none;
    }
  }
</style>
